<section class="top">
	<h2 class="main-title"><span>STUDENT DATABASE</span></h2>
	<br>
	<h4 class="year">ACADEMIC YEAR 2017-2018</h4>
	<br>
</section>
<table>
	<tr>
		<th><h6><%= link_to "Ad No", sort: "admission_number" %></h6></th>
		<th><h6>First Name</h6></th>
		<th><h6>Last Name</h6></th>
		<th><h6>Year</h6></th>
		<th><h6>Date of Birth</h6></th>
		<th><h6>Gender</h6></th>
		<th><h6>Address</h6></th>
		<th><h6>Tel Nos</h6></th>
		<th><h6>Books Taken</h6></th>
		<th><h6>Details</h6></th>
	</tr>
	<% @students.each do |student| %>
	<tr class="student-details">
		<td><%= student.admission_number %></td>
		<td><%= student.first_name %></td>
		<td><%= student.last_name %></td>
		<td><%= student.year %></td>
		<td><%= student.date_of_birth %></td>
		<td><%= student.gender %></td>
		<td class="address"><%= student.address  %></td>
		<td><%= student.telephone_number %></td>
		<td><%= student.books_taken %></td>
		<td><%= link_to 'Show', student_path(student), class: 'btn btn-success' %></td>
	</tr>
	<% end %>
</table>
<%= link_to 'Add Student', new_student_path, class: 'main btn btn-primary' %>
<%= paginate @students %>


